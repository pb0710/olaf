{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react",
		"target": "ESNext",
		"module": "CommonJS",
		"esModuleInterop": true,
		"emitDeclarationOnly": true,
		"paths": {
			"@/*": [
				"src/*"
			]
		},
	},
	"exclude": [
		"./dist/**/*",
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.test.tsx",
		"**/*.spec.tsx"
	]
}
